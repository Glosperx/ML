import numpy as np
from scipy.fft import rfft, rfftfreq
import matplotlib.pyplot as plt
from sklearn.preprocessing import MinMaxScaler
import pandas as pd

# === 1. CiteÈ™ti fiÈ™ierul tÄƒu ===
my_file = "./pentilfuran.MDE"
df = pd.read_csv(my_file, delim_whitespace=True, comment='#', names=["Step", "T", "E_KS", "E_tot", "Vol", "P"])

# Varianta optimizatÄƒ pentru filtrare
dfs = [df[df['Step'] == i].iloc[1:901] for i in range(1, 100)]
df_data = pd.concat(dfs, ignore_index=True)

# === 2. Extragi energia totalÄƒ ===
en = df_data['E_tot'].values

# === 3. Scaling ===
scaler = MinMaxScaler()
energy_scaled = scaler.fit_transform(en.reshape(-1, 1)).flatten()

# === 4. Parametru dt (pasul temporal) ===
# DacÄƒ fiecare rÃ¢nd e o mÄƒsurÄƒtoare la un pas de timp constant, dt = 1
dt = 1  

# === 5. FFT ===
y = energy_scaled - np.mean(energy_scaled)
N = len(y)
yf = rfft(y)
xf = rfftfreq(N, dt)

# IgnorÄƒm frecvenÈ›a 0 (offset DC)
idx_max = np.argmax(np.abs(yf[1:])) + 1
f0 = xf[idx_max]       # frecvenÈ›a dominantÄƒ
T0 = 1 / f0            # perioada Ã®n paÈ™i de timp

print(f"ğŸ“Š FrecvenÈ›a dominantÄƒ: {f0:.6f} Hz")
print(f"ğŸ“ˆ Perioada principalÄƒ: {T0:.2f} paÈ™i de timp")
print(f"ğŸ” Window size recomandat: {int(T0*2)} paÈ™i")

# === 6. Plot spectru ===
plt.figure(figsize=(8,4))
plt.plot(xf, np.abs(yf))
plt.title("Spectrul Fourier al Energiei (scaled)")
plt.xlabel("FrecvenÈ›Äƒ [Hz]")
plt.ylabel("Amplitudine")
plt.grid(True)
plt.show()
